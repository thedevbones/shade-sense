{
    "manifest_version": 2,
    "name": "Shade Sense",
    "description": "A color vision deficiency corrector extension",
    "version": "1.0.2",
    "browser_action": {
      "default_title": "Shade Sense",
      "default_popup": "popup.html"
    },
  
    "content_scripts": [
      {
        "matches": [
          "http://*/*",
          "https://*/*"
        ],
        "js": [
          "lib/chroma/src/chroma.js",
          "shade.js"
        ]
      }
    ],
    "permissions": [
      "activeTab"
      
    ]
  }